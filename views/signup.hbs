<section class="container-form row">
  <header>
    <h2 class="amber-text text-lighten-1 col offset-s2">Signup</h2>
  </header>

  {{#if message}}
    <script>
      Materialize.toast('{{message}}', 4000)
    </script>
  {{/if}}

  <form method="post" action="/signup" class="col s8 offset-s2">
    <label>Email
      <input class="form-control" type="text" name="email">
    </label>
    <label>Password
      <input class="form-control" type="password" name="password">
    </label>
    <button type="submit" class="waves-effect waves-light btn-large btn-flat">Sign Up</button>
  </form>
</section>
