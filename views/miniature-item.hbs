<section class="row">
  <div class="col s6 offset-s3">
    <div class="container-miniature-item">
      <header>
        <h2 class="flow-text">{{miniature.name}}</h2>
      </header>
      <img src="/images/{{miniature.imageUrl}}" alt="{{miniature.name}}">
    </div>
  </div>
</section>

<section class="container-form update-miniature">
  <header>
    <h2 class="center">Update Miniature</h2>
  </header>
  <form action="/miniatures/{{miniature._id}}?_method=put" method="post">
    <input type="text" name="updateMiniature[name]" placeholder="Name" value="{{miniature.name}}">
    <input type="text" name="updateMiniature[imageUrl]" placeholder="Image Url" value="{{miniature.imageUrl}}">
    <button type="submit" class="waves-effect waves-light btn-large btn-flat">Update</button>
  </form>
</section>

<section class="container-form delete-miniature">
  <form action="/miniatures/{{miniature._id}}?_method=delete" method="post">
    <button type="submit" class="waves-effect waves-light btn-large btn-flat">Delete</button>
  </form>
</section>
